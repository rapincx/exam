#charity
  padding 120px 0
  background url("../img/charity.png") no-repeat
  background-size cover
  @media screen and (min-width 319px) and (max-width 480px)
    padding 30px 0
  .charity-header
    color #ffffff
    font 700 57px/56px $main-font-family
    margin-bottom 25px
    @media screen and (min-width 319px) and (max-width 480px)
      font-size 30px
      text-align center
      line-height 1.2
    @media screen and (min-width 481px) and (max-width 768px)
      font-size 42px
      line-height 1.2
  .charity-s-header
    color #ffffff
    font 400 18px $main-font-family
    @media screen and (min-width 319px) and (max-width 480px)
      margin-bottom 30px
  .charity-item
    color : #000000
    overflow hidden
    margin-bottom 25px
    &:first-child
      .charity-number
        &::before
          right 66%
        &::after
          left 68%
    &:last-child
      .charity-number
        &::before
          right 68%
        &::after
          left 70%
    .charity-number
      position relative
      color #ffffff
      font 700 36px/1 $main-font-family
      margin-bottom 10px
      &::before, &::after
        content ""
        position absolute
        height 100%
        width 28px
        top 60%
        border-top-style solid
        border-top-width 1px
        border-top-color #c6946f
        margin-top -4px
    .charity-desc
      padding 0 35px
      color #ffffff
      font 400 18px $main-font-family