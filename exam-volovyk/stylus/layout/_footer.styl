footer
  position relative
  border-top 27px solid #2b2b2b
  .address
    position absolute
    width 100%
    height auto
    top 55px
    left 0
  .address-block
    background-color rgba(255, 255, 255, .9)
    padding 40px
    .address-item
      margin-bottom 30px
      &::after
        content ""
        display block
        width 86px
        height 1px
        background-color #c6946f
        margin-left calc(50% - 43px)
        margin-top 25px
      .address-header
        color #2b2b2b
        font 600 24px $main-font-family
        margin-bottom 10px
      .address-desc
        color #2b2b2b
        font 400 16px $main-font-family