#license
  padding 70px 0 180px
  background url("../img/license.png") no-repeat
  background-size cover
  @media screen and (min-width 319px) and (max-width 480px)
    padding 30px 0
  .license-header
    color #3a3531
    font 700 57px/56px $main-font-family
    text-align center
    margin-bottom 45px
    @media screen and (min-width 319px) and (max-width 480px)
      font-size 32px
      line-height 1.2
    @media screen and (min-width 481px) and (max-width 768px)
      font-size 42px
      line-height 1.2
  .license-item
    @media screen and (min-width 319px) and (max-width 480px)
      margin-bottom 10px
    img
      width 100%
      border 9px solid #c6946f
      background-color #ffffff